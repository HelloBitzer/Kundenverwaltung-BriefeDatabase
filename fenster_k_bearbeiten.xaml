        <Button x:Name="BT_brief_erst" Content="Briefe erstellen" Margin="479,256,27,114.667" Click="BT_brief_erst_Click" />
        <DataGrid Name="DG_kunde" IsReadOnly="True"  HorizontalAlignment="Left" Height="361" Margin="26,30,0,0" VerticalAlignment="Top" Width="428"  />
